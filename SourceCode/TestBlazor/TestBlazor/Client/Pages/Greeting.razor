@page "/greeting"

<h2>Greeting</h2>

<input @bind="InputValue" @bind:event="oninput"/>

<p>Hello, @InputValue</p>

<button class="btn btn-primary" @onclick="DisplayText">Display Text</button>

<p>@SomeDisplayText</p>

@code {
    public string InputValue { get; set; }

    public string SomeDisplayText { get; set; }

    private void DisplayText()
    {
        SomeDisplayText = string.IsNullOrWhiteSpace(InputValue) ? "please enter text" : $"special text for: {InputValue}";

    }
}
